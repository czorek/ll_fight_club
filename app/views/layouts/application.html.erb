<!DOCTYPE html>
<html>
  <head>
    <title>Rivals</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>

  <body>
    <div id="header" class="navbar navbar-default navbar-static-top">
      <div class="container">
        <a href="<%= root_url %>" class="navbar-brand">LOGO goes here </a>

        <ul class="nav nav-pills navbar-nav navbar-right">
          <li><%= link_to 'Link#1', '#' %></li>

          <% if current_user %>
            <li><%= link_to t(".header.sign.out"), destroy_user_session_path, method: :delete %></li>
          <% else %>
            <li><%= link_to t(".header.sign.in"), new_user_session_path %></li>
            <li><%= link_to t(".header.sign.up"), new_user_registration_path %></li>
          <% end %>

          <%= render 'layouts/language_switcher' %>
        </ul>
      </div>
    </div>

    <div class="container main-content">
      <div class="messages">
        <p class="notice"><%= notice %></p>
        <p class="alert"><%= alert %></p>
      </div>

      <%= yield %>

    </div>
  </body>
</html>
