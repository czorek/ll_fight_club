<li id='language-switcher'>
  <% if I18n.locale == I18n.default_locale %>
    <%= link_to params.merge({:locale => 'pl'}) do %>
      <span class="flag-icon flag-icon-pl"></span>
    <% end %>
  <% else %>
    <%= link_to params.merge({:locale=>'en'}) do %>
      <span class="flag-icon flag-icon-gb"></span>
    <% end %>
  <%end%>
</li>
