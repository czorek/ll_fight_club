<div id="welcome-content">
  <div id="headers">
    <h1><%= t(".main_header") %></h1>
    <h4><%= t(".subheader") %></h4>
  </div>

  <% if current_user %>
    <%= link_to new_fight_path do %>
      <p class="btn btn-danger index-button"><%= t(".fight") %></p>
    <% end %>
      <span><%= t('.or') %></span>
      <%= link_to new_fighter_path do %>
        <p class="btn btn-info"><%= t("fighters.create.create") %></p>
      <% end %>
  <% else %>
    <%= link_to new_user_registration_path do %>
      <p class="btn btn-primary index-button"><%= t(".register") %></p>
    <% end %>
    <span><%= t('.or') %></span>
    <%= link_to new_user_session_path do %>
      <p class="btn btn-info"><%= t(".login") %></p>
    <% end %>
  <% end %>
</div>
